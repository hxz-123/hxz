<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.abc.repository.UserRepository">

    <insert id="insertUser">
        insert into user (username,password,phone,createTime,updateTime) values (#{form.username},#{form.password},#{ form.phone },current_date,current_date)
    </insert>
    <update id="updateUser">
        update user set username=#{form.username},phone=#{form.phone},createTime=current_date,updateTime=current_date where id=#{form.id}
    </update>
    <delete id="deleteUser">
        delete from user where id = #{id}
    </delete>
    <select id="findBySearch" resultType="com.abc.bean.User">
        select * from user
        <where>
            <if test="params != null and params.name != null and params.name != ''">
                and username like concat('%', #{ params.name }, '%')
            </if>
            <if test="params != null and params.phone != null and params.phone != ''">
                and phone like concat('%', #{ params.phone }, '%')
            </if>
        </where>
    </select>
    <select id="findByName" resultType="com.abc.bean.Form">
        select * from user where username = #{username} limit 1
    </select>
    <select id="findByNameAndPassword" resultType="com.abc.bean.Form">
        select * from user where username = #{username} and password = #{password} limit 1
    </select>
</mapper>